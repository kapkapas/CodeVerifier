@model IEnumerable<CodeVerifier.Models.Problem>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Code Verifier";
}

<h2>Список завдань</h2>

<p>
    @if (Request.IsAuthenticated) 
    { 
    @Html.ActionLink("Створити нове завдання", "Create")
    }
    else
    {
  @Html.ActionLink("Щоб додати завдання увійдіть","Login","Account")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Task)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InputExample)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OutputExample)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Task)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InputExample)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OutputExample)
        </td>
        <td>
            @if (Request.IsAuthenticated)
            {
                @Html.ActionLink("Редагувати  |", "Edit", new {id = item.Id})
                @Html.ActionLink(" Видалити  |", "Delete", new {id = item.Id}) 
                
            }
             @Html.ActionLink("Детальніше", "Details", new {id = item.Id})
        </td>
    </tr>
}

</table>
